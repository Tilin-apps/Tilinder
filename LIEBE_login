class LIEBEIniciodeSesionWidget extends StatefulWidget {
  const LIEBEIniciodeSesionWidget({super.key});

  @override
  State<LIEBEIniciodeSesionWidget> createState() =>
      _LIEBEIniciodeSesionWidgetState();
}

class _LIEBEIniciodeSesionWidgetState extends State<LIEBEIniciodeSesionWidget> {
  late LIEBEIniciodeSesionModel _model;

  final scaffoldKey = GlobalKey<ScaffoldState>();

  @override
  void initState() {
    super.initState();
    _model = createModel(context, () => LIEBEIniciodeSesionModel());

    // On page load action.
    SchedulerBinding.instance.addPostFrameCallback((_) async {
      GoRouter.of(context).prepareAuthEvent();

      final user = await authManager.signInWithEmail(
        context,
        _model.emailAddressController.text,
        _model.passwordController.text,
      );
      if (user == null) {
        return;
      }

      context.goNamedAuth('LIEBE_Perfil', context.mounted);
    });

    _model.emailAddressController ??= TextEditingController();
    _model.emailAddressFocusNode ??= FocusNode();

    _model.passwordController ??= TextEditingController();
    _model.passwordFocusNode ??= FocusNode();
  }

  @override
  void dispose() {
    _model.dispose();

    super.dispose();
  }

